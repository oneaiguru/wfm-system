{
  "info": {
    "name": "WFM Enterprise API - Superiority Demo",
    "description": "Complete API collection demonstrating WFM Enterprise advantages over Argus CCWFM",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "key",
        "value": "X-API-Key",
        "type": "string"
      },
      {
        "key": "value",
        "value": "{{api_key}}",
        "type": "string"
      },
      {
        "key": "in",
        "value": "header",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "1. Performance Comparison",
      "item": [
        {
          "name": "Erlang C Speed Test",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Response time is less than 50ms\", function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(50);",
                  "});",
                  "",
                  "pm.test(\"Calculation successful\", function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('agents_required');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"arrival_rate\": 150,\n  \"service_time\": 300,\n  \"target_service_level\": 0.8,\n  \"target_answer_time\": 20,\n  \"shrinkage\": 0.3\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/algorithms/erlang-c/calculate",
              "host": ["{{base_url}}"],
              "path": ["algorithms", "erlang-c", "calculate"]
            }
          }
        },
        {
          "name": "Performance Comparison",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"WFM Enterprise is faster than Argus\", function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.speed_advantage).to.be.above(10);",
                  "    console.log(`WFM Enterprise is ${response.speed_advantage}x faster!`);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"algorithm\": \"erlang_c\",\n  \"parameters\": {\n    \"arrival_rate\": 150,\n    \"service_time\": 300,\n    \"target_service_level\": 0.8,\n    \"target_answer_time\": 20\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/comparison/performance",
              "host": ["{{base_url}}"],
              "path": ["comparison", "performance"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Accuracy Comparison",
      "item": [
        {
          "name": "Forecast Accuracy Test",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"WFM Enterprise has better accuracy\", function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.accuracy_advantage).to.be.above(10);",
                  "    console.log(`WFM Enterprise is ${response.accuracy_advantage}% more accurate!`);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"test_mode\": \"quick\",\n  \"forecast_horizon\": 24\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/comparison/accuracy",
              "host": ["{{base_url}}"],
              "path": ["comparison", "accuracy"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Multi-Skill Optimization",
      "item": [
        {
          "name": "Multi-Skill Comparison",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"WFM Enterprise has better utilization\", function () {",
                  "    const response = pm.response.json();",
                  "    const wfmUtil = response.wfm_enterprise.utilization;",
                  "    const argusUtil = response.argus.utilization;",
                  "    pm.expect(wfmUtil).to.be.above(argusUtil);",
                  "    console.log(`WFM Enterprise achieves ${response.overall_improvement}% better utilization!`);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"scenario\": \"multi_skill_optimization\",\n  \"parameters\": {\n    \"skills\": [\"English\", \"Spanish\", \"Technical\"],\n    \"agents\": 50,\n    \"demand_forecast\": {\n      \"English\": 40,\n      \"Spanish\": 20,\n      \"Technical\": 15\n    }\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/comparison/results",
              "host": ["{{base_url}}"],
              "path": ["comparison", "results"]
            }
          }
        }
      ]
    },
